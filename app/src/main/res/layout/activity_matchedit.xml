<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aristotle.scouting.MatchEditActivity"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <TextView
               android:id="@+id/teamNumberTitle"
               android:layout_width="82dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:fontFamily="sans-serif"
               android:padding="6dp"
               android:text="Team Numbers"
               android:textAlignment="viewStart"
               android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/redTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="4"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/versusText"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:text="vs"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blueTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="4"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalCubeTitle"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:padding="6dp"
                android:text="Total Cubes (Both Teleop and Auto)"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cubeBlueNearest"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/cubeBlueMid"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/cubeBlueFarthest"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cubeRedFarthest"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/cubeRedMid"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/cubeRedNearest"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="2035"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:onClick="submitMatch"
                android:text="Submit" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>